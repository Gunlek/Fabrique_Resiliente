<script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
<script>
    let app = new Vue({
        el: '#doc_app',
        delimiters: ['${', '}'],
        data: {
            global_tabs: 1,
            selected_tab: 0,
        },
        methods: {
            change_global_tabs: function(new_tab){
                this.global_tabs = new_tab;
            },
            change_tab: function(new_tab){
